{
  "manifest_version": 3,
  "name": "University RAG Chat",
  "version": "0.1",
  "description": "Chat with university info (RAG) from any page",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
